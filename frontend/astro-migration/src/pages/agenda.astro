---
import Layout from '../layouts/Layout.astro';
import ActualiteCard from '../components/ActualiteCard.astro';
import ConcertCard from '../components/ConcertCard.astro';
import { actualites, concerts } from '../data/mock';
---

<Layout title="Agenda - Association Adonf">
  <div class="section-layout">
    <section class="actualites-section">
      <div class="container">
        <div class="section-header">
          <div>
            <h2 class="section-title" id="actualites">Toutes les actualit√©s</h2>
          </div>
        </div>
        <div class="actualites-grid">
          {actualites.map((actu) => (
            <ActualiteCard actualite={actu} featured={actu.featured} />
          ))}
        </div>
      </div>
    </section>

    <section class="programmation-section">
      <div class="container">
        <div class="section-header">
          <div>
            <h2 class="section-title" id="programmation">Toute la programmation</h2>
          </div>
        </div>
        <div class="concerts-grid">
          {concerts.map((concert) => (
            <ConcertCard concert={concert} />
          ))}
        </div>
      </div>
    </section>
  </div>
</Layout>

<style>
  /* Ensure scroll margin for sticky header */
  #actualites, #programmation {
    scroll-margin-top: 150px;
  }
</style>
