---
import Layout from "../layouts/Layout.astro";
import ContactCard from "../components/ContactCard.astro";
---

<Layout title="Studio d'Enregistrement - Association Adonf">
  <div class="page-container">
    <!-- Header -->
    <header class="page-header">
      <h1 class="main-title">
        STUDIO <span>D'ENREGISTREMENT</span>
      </h1>
      <div class="title-underline"></div>
    </header>

    <!-- Equipment List -->
    <section class="equipment-section">
      <h2 class="section-title">ENREGISTREMENT ET MIXAGE SUR PROTOOLS 10</h2>

      <div class="equipment-container">
        <ul class="check-list">
          <li>Préamplis RME Octamic ( 16 pistes en simultané / 24 bits 48Khz )</li>
          <li>2 Préamplis compresseur à lampe AVALON</li>
          <li>Écoutes Genelec / Ns10 Yamaha</li>
          <li>Parc micro batterie Audix , micros instruments Shure , micro voix Neumann + divers DI</li>
        </ul>
      </div>
    </section>

    <!-- Contacts Section -->
    <section class="contacts-section">
      <h2 class="section-title">CONTACTS</h2>
      <div class="contacts-grid">
        <ContactCard
          image="/assets/logo-adonf.png"
          name="Ingénieur Son"
          role="Studio d'Enregistrement"
          email="contact@association-adonf.fr"
          phone="06 12 34 56 78"
        />
      </div>
    </section>
  </div>
</Layout>

<style>
  /* Core Layout */
  .page-container {
    padding: 3rem 1rem;
    max-width: 1200px;
    margin: 0 auto;
    font-family:
      system-ui,
      -apple-system,
      sans-serif;
  }

  @media (min-width: 768px) {
    .page-container {
      padding: 5rem 2rem;
    }
  }

  /* Header */
  .page-header {
    margin-bottom: 4rem;
    text-align: center;
  }
  @media (min-width: 768px) {
    .page-header {
      text-align: left;
      margin-bottom: 6rem;
    }
  }

  .main-title {
    font-size: 3rem;
    font-weight: 900;
    text-transform: uppercase;
    color: #1a1a1a;
    line-height: 1.1;
    margin: 0;
  }
  @media (min-width: 768px) {
    .main-title {
      font-size: 4.5rem;
    }
  }

  .main-title span {
    color: var(--primary-color, #dc143c);
  }

  .title-underline {
    height: 8px;
    width: 120px;
    background-color: var(--primary-color, #dc143c);
    margin-top: 1rem;
    border-radius: 4px;
    margin-left: auto;
    margin-right: auto;
  }
  @media (min-width: 768px) {
    .title-underline {
      margin-left: 0;
      margin-right: 0;
    }
  }

  /* Section Styles */
  .section-title {
    font-size: 1.8rem;
    font-weight: 900;
    text-transform: uppercase;
    color: #1a1a1a;
    margin-bottom: 2rem;
    position: relative;
    display: inline-block;
  }
  .section-title::after {
    content: "";
    position: absolute;
    bottom: -10px;
    left: 0;
    width: 60px;
    height: 6px;
    background: var(--primary-color, #dc143c);
    border-radius: 3px;
  }

  /* Equipment List */
  .equipment-section {
    margin-bottom: 5rem;
  }

  .equipment-container {
    background: #f9f9f9;
    padding: 2.5rem;
    border-radius: 16px;
  }
  @media (min-width: 768px) {
    .equipment-container {
      padding: 3rem;
    }
  }

  .check-list {
    list-style: none;
    padding: 0;
    margin: 0;
  }
  .check-list li {
    margin-bottom: 1rem;
    padding-left: 2rem;
    position: relative;
    font-size: 1.15rem;
    color: #333;
  }
  .check-list li::before {
    content: "✓";
    position: absolute;
    left: 0;
    color: var(--primary-color, #dc143c);
    font-weight: bold;
    font-size: 1.2rem;
  }

  /* Contacts Section */
  .contacts-section {
    margin-bottom: 4rem;
  }

  .contacts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>
