---
const year = new Date().getFullYear();
const footerLinks = [
    { label: 'Accueil', route: '/' },
    { label: 'Association', route: '/association' },
    { label: 'Contacts', route: '/contacts' },
    { label: "Plan d'accès", route: '/plan-acces' },
    { label: 'Politique de confidentialité', route: '/politique-confidentialite' },
    { label: 'Mentions légales', route: '/mentions-legales' },
    { label: 'CGV / Statuts', route: '/cgv-statuts' },
    { label: 'Partenaires', route: '/partenaires' },
];
const socialLinks = [
    { icon: 'facebook', url: 'https://www.facebook.com/AssociationADonf/' },
    { icon: 'instagram', url: 'https://www.instagram.com/association_adonf/' },
    { icon: 'youtube', url: 'https://www.youtube.com/@rockschooladonf7634' },
];
---

<footer class="site-footer">
    <div class="footer-container">
        <div class="footer-top">
            <div class="footer-logo">
                <img src="/assets/logo-adonf.png" alt="Adonf" />
            </div>
            <div class="footer-links">
                <ul>
                    {footerLinks.map(link => (
                        <li><a href={link.route}>{link.label}</a></li>
                    ))}
                </ul>
            </div>
            <div class="footer-social">
                {socialLinks.map(social => (
                    <a href={social.url} target="_blank" rel="noopener noreferrer" class="social-link">
                        <i class={`pi pi-${social.icon}`}></i>
                    </a>
                ))}
            </div>
        </div>
        <div class="footer-bottom">
            <p>&copy; {year} Association Adonf - Tous droits réservés</p>
        </div>
    </div>
</footer>

<style lang="scss">
    .site-footer {
        background-color: var(--light-black);
        color: white;
        padding: 3rem 1rem 1rem;
        margin-top: 4rem;
    }
    .footer-container {
        max-width: 1200px;
        margin: 0 auto;
    }
    .footer-top {
        display: flex;
        flex-wrap: wrap;
        justify-content: space-between;
        gap: 2rem;
        margin-bottom: 2rem;
        padding-bottom: 2rem;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }
    .footer-logo img {
        width: 150px;
        height: auto;
    }
    .footer-links ul {
        list-style: none;
        padding: 0;
        margin: 0;
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        gap: 1rem 2rem;
        
        a {
            color: #ccc;
            text-decoration: none;
            &:hover {
                color: var(--primary-color);
            }
        }
    }
    .footer-social {
        display: flex;
        gap: 1rem;
        .social-link {
            font-size: 1.5rem;
            color: var(--primary-color);
            &:hover { color: white; }
        }
    }
    .footer-bottom {
        text-align: center;
        font-size: 0.9rem;
        color: #777;
    }

    @media (max-width: 768px) {
        .footer-top {
            flex-direction: column;
            align-items: center;
            text-align: center;
        }
    }
</style>
