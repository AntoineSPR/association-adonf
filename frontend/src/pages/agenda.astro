---
import Layout from "../layouts/Layout.astro";
import ActualiteCard from "../components/ActualiteCard.astro";
import ConcertCard from "../components/ConcertCard.astro";
import { actualites, concerts } from "../data/mock";
---

<Layout title="Agenda - Association Adonf">
  <div class="page-container">
    <header class="page-header">
      <h1 class="main-title">L'AGENDA <span>ADONF</span></h1>
      <div class="title-underline"></div>

      <div class="agenda-nav">
        <a href="#actualites" class="nav-btn">Actualités</a>
        <a href="#programmation" class="nav-btn btn-outline">Programmation</a>
      </div>
    </header>

    <div class="section-layout space-y-20">
      <!-- Actualités Section -->
      <section class="actualites-section scroll-mt-32" id="actualites">
        <div class="flex items-center gap-4 mb-10 pb-4 border-b border-gray-200">
          <div class="w-2 h-10 bg-[var(--primary-color)] rounded-full"></div>
          <div>
            <h2 class="text-3xl font-bold text-[var(--light-black)] uppercase tracking-wide m-0">Actualités</h2>
            <p class="text-[var(--text-light)] text-lg">Les dernières nouvelles de l'association</p>
          </div>
        </div>

        <div class="actualites-grid">
          {actualites.map((actu) => <ActualiteCard actualite={actu} featured={actu.featured} />)}
        </div>
      </section>

      <!-- Programmation Section -->
      <section class="programmation-section scroll-mt-32" id="programmation">
        <div class="flex items-center gap-4 mb-10 pb-4 border-b border-gray-200">
          <div class="w-2 h-10 bg-[var(--light-black)] rounded-full"></div>
          <div>
            <h2 class="text-3xl font-bold text-[var(--light-black)] uppercase tracking-wide m-0">Programmation</h2>
            <p class="text-[var(--text-light)] text-lg">Les concerts et événements à venir</p>
          </div>
        </div>

        <div class="concerts-grid">
          {concerts.map((concert) => <ConcertCard concert={concert} />)}
        </div>
      </section>
    </div>
  </div>
</Layout>

<style>
  .page-header {
    margin-bottom: 2rem;
  }

  .agenda-nav {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    margin-top: 2rem;
  }

  @media (max-width: 480px) {
    .agenda-nav {
      flex-direction: column;
      align-items: center;
    }
  }

  @media (min-width: 768px) {
    .agenda-nav {
      justify-content: flex-start;
    }
  }

  .nav-btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    border-radius: 50px;
    font-weight: 700;
    text-transform: uppercase;
    text-decoration: none;
    transition: all 0.3s ease;
    font-size: 0.9rem;
    letter-spacing: 0.5px;
  }

  .nav-btn:not(.btn-outline) {
    background: var(--primary-color, #dc143c);
    color: white;
    border: 2px solid var(--primary-color, #dc143c);
  }

  .nav-btn:not(.btn-outline):hover {
    background: #b01030;
    border-color: #b01030;
    transform: translateY(-2px);
  }

  .nav-btn.btn-outline {
    background: transparent;
    color: #333;
    border: 2px solid #333;
  }

  .nav-btn.btn-outline:hover {
    background: #333;
    color: white;
    transform: translateY(-2px);
  }

  .actualites-grid,
  .concerts-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
</style>
