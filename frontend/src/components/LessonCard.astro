---
interface Props {
  lesson: {
    title: string;
    slug: string;
    image: string;
  };
  baseUrl?: string;
}

const { lesson, baseUrl = "/cours-de-musique" } = Astro.props;
---

<a href={`${baseUrl}/${lesson.slug}`} class="block">
  <div class="lesson-card">
    <div class="image-container">
      <img src={lesson.image} alt="" loading="lazy" />
    </div>
    <div class="card-label">
      <h3>{lesson.title}</h3>
    </div>
  </div>
</a>

<style>
  .block {
    display: block;
    text-decoration: none;
    color: inherit;
  }

  .lesson-card {
    position: relative;
    width: 300px;
    height: 300px;
    border-radius: 12px;
    overflow: hidden;
    background-color: #333;
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .lesson-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 12px 20px rgba(0, 0, 0, 0.15);
  }

  .image-container {
    position: absolute;
    inset: 0;
    width: 100%;
    height: 100%;
    background-color: #444;
  }

  img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
    display: block;
  }

  .lesson-card:hover img {
    transform: scale(1.1);
  }

  .card-label {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    background-color: var(--primary-color, #dc143c);
    padding: 12px;
    z-index: 2;
  }

  h3 {
    margin: 0;
    color: white;
    text-align: center;
    font-weight: 800;
    text-transform: uppercase;
    font-size: 1rem;
    letter-spacing: 1px;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
  }
</style>
