---
interface Props {
  image: string;
  name: string;
  role: string;
  email: string;
  phone: string;
}

const { image, name, role, email, phone } = Astro.props;

const resolvePath = (path: string) => {
    if (path.startsWith('http')) return path;
    const base = import.meta.env.BASE_URL; 
    const cleanPath = path.startsWith('/') ? path.slice(1) : path;
    return `${base}${cleanPath}`;
}
---

<div class="contact-card">
  <div class="image-col">
    <img src={resolvePath(image)} alt={name} />
  </div>
  <div class="info-col">
    <h3>{name}</h3>
    <p class="role">{role}</p>
    <div class="contact-details">
      <a href={`mailto:${email}`} class="contact-link">
        <span class="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path><polyline points="22,6 12,13 2,6"
            ></polyline></svg
          >
        </span>
        {email}
      </a>
      <a href={`tel:${phone}`} class="contact-link">
        <span class="icon">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="18"
            height="18"
            viewBox="0 0 24 24"
            fill="none"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"
            ><path
              d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"
            ></path></svg
          >
        </span>
        {phone}
      </a>
    </div>
  </div>
</div>

<style>
  .contact-card {
    display: flex;
    align-items: center;
    gap: 2rem;
    background: white;
    padding: 2rem;
    border-radius: 16px;
    box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
    border: 1px solid rgba(0, 0, 0, 0.05);
    transition:
      transform 0.3s ease,
      box-shadow 0.3s ease;
  }

  .contact-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.1);
  }

  .image-col {
    flex-shrink: 0;
  }

  .image-col img {
    width: 120px;
    height: 120px;
    border-radius: 50%;
    object-fit: cover;
    border: 4px solid #f0f0f0;
  }

  .info-col h3 {
    margin: 0;
    font-size: 1.5rem;
    font-weight: 800;
    color: #1a1a1a;
    line-height: 1.2;
  }

  .role {
    color: var(--primary-color, #dc143c);
    font-weight: 700;
    margin: 0.25rem 0 1rem 0;
    font-size: 0.95rem;
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .contact-details {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
  }

  .contact-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: #555;
    text-decoration: none;
    font-size: 1rem;
    font-weight: 500;
    transition: color 0.2s;
  }

  .contact-link:hover {
    color: var(--primary-color, #dc143c);
  }

  .icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-color, #dc143c);
  }

  @media (max-width: 640px) {
    .contact-card {
      flex-direction: column;
      text-align: center;
      padding: 2rem 1.5rem;
      gap: 1.5rem;
    }
    .contact-details {
      align-items: center;
    }
    .image-col img {
      width: 100px;
      height: 100px;
    }
  }
</style>
